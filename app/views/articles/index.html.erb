<h1>Listing articles </h1>
<%= link_to 'new article', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  
  <% @articles.each do |article| %>
    <tr>
      <TD><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'edit', edit_article_path(article) %></td>
      <td><%= link_to 'destroy', article_path(article), method: :delete, ata: { confirm: 'are you sure?' } %></td>
    </tr>
  <% end %>
</table>
